<p id="notice"><%= notice %></p>

<h1>Students for <%=@classroom.subject_name%> class</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Grade</th>
    </tr>


  </thead>

  <tbody>

	<tr>
    	<th> Student name </th>
      <th> Phone </th>
  </tr>

    <% @classes.each do |classes| %>
      <% @student.where(id: classes.student_id).each do |s| %>
        <tr>
          <td><%=s.first_name %> <%=s.last_name %></td>
          <td><%=s.phone %></td>
          <%@grade.where(classes_id: classes.id.to_i).each do |c|%>
              <td><%=c.scores%></td>
              <td><a href="/grades/<%=@subject.id%>/<%=classes.id%>/new">Grade Student</a></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Deregister', classes, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          <%end%>
    
        </tr>
      <% end %>
    <% end %>    
            
  </tbody>

</table>