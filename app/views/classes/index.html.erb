  <style>

  table{
    width:80%;
  }
  h1{
    text-align:center;
  }
  a{
    text-align: center;
  }

  .background{
    background-color:grey;
    margin-left: 100px;
    margin-right: 100px;
  }


  </style>
  <div class="background">

<p id="notice"><%= notice %></p>

<h1>Classes</h1>

<table>


    <tr>
        <th class="text-center"> Subject name </th>
        <th class="text-center"> Year Level </th>
        <th class="text-center"> Price ($) </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>

    </tr>
    <% @classroom.each do |classroom| %>
      <tr>
        <td> <%=classroom.subject_name %> </td>
        <td> <%=classroom.level %> </td>
        <td> <%=classroom.price %> </td>

        <% if current_user.admin? || current_user.teacher? %>
        <td><a href="/classes/<%=classroom.id %>/show"> View Pupils in Class </a></td>
        <% else %>
        <% end %>
        <% if current_user.admin? || current_user.teacher? %>
          <td> <a href="/classes/<%=classroom.id%>/new"> Assign students to this Class </a> </td>
          <td><a href="/attend/<%=classroom.id%>/new">Mark today's attendance</a></td>
        <% end %>
          <td><a href=""></a></td>

      </tr>
    <% end %>
</table>
</div>

