<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>

  <tr>
      <th> Student name </th>
      <th> Phone </th>
  </tr>

      <% @student.each do |s| %>
        <tr>
          <td><%=s.first_name %> <%=s.last_name %></td>
          <td><%=s.phone %></td>
            <% if current_user.admin? %>
            <td><a href = '/students/<%= s.id %>/destroy'>Delete</a></td>
            <% end %>
        </tr>
      <% end %>  
            
  </tbody>
</table>

<%= link_to 'Back', list_client_user_path %>
