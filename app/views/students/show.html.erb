  <style>

  table{
    width:80%;
  }
  h1{
    text-align:center;
  }
  a{
    text-align: center;
  }

  .background{
    background-color:grey;
    margin-left: 100px;
    margin-right: 100px;
  }


  </style>
  <div class="background">
<p id="notice"><%= notice %></p>

<h1>Children</h1>


<table>


  <tbody>

  <tr>
      <th>Name </th>
      <th>Phone</th>
      <th>Gender</th>
      <th></th>
  </tr>

      <% @student.each do |s| %>
        <tr>
          <td><%=s.first_name %> <%=s.last_name %></td>
          <td><%=s.phone %></td>
          <td><%=s.gender %></td>

          <td><a href="/students/<%=s.id%>/calendar">View calendar </a></td>

            <% if current_user.admin? %>
            <td><a href = '/students/<%= s.id %>/destroy'>Delete</a></td>
            <% end %>
        </tr>
      <% end %>  
            
  </tbody>
</table>
</div>


