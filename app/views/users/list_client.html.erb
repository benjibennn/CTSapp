<p id="notice"><%= notice %></p>

<h1> Display all Clients </h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name </th>
    <th>Gender </th>
    <th>Phone </th>
  </tr> 

  <% @client.each do |client| %>

	  <tr>
	    <td><%= client.first_name%></td>
	    <td><%= client.last_name%></td>
	    <td><%= client.gender%></td>
	    <td><%= client.phone%></td>

      <td> <a href="/student/<%= client.id %>/new"> Assign Student for this Client </a> </td>
      <td> <a href="/student/<%= client.id %>/show"> View Student for this Client </a> </td>
    </tr>

	  </tr>
  <% end %>
</table>

<% if current_user.admin? %>
  <a href="/users/<%= current_user.id%>/create_client"> Create Client </a>
<% end %>