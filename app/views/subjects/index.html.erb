<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <tr>
        <th> Subject name </th>
        <th>Year Level</th>
        <th>Price</th>
    </tr>
    <% @subjects.each do |subject| %>
      <tr>
        <td> <%=subject.subject_name %></td>
        <td> <%=subject.level %></td>
        <td> <%=subject.price %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', subject %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
      
        <% else %>
          <td><%= link_to 'Show', subject %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/subjects/<%=current_user.id%>/new"> Create new Subject </a>