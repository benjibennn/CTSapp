  <style>

  table{
    width:80%;
  }
  h1{
    text-align:center;
  }
  a{
    text-align: center;
  }

  .background{
    background-color:grey;
    margin-left: 100px;
    margin-right: 100px;
  }

  .center a{
    color:black;
  }

  table th{
    text-align: :center;
  }


  </style>
  <div class="background">

<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.description %></td>
        <td><%= trip.date %></td>
        <% if current_user.client? %>
          <td><%= link_to 'Show', trip %></td>
        <% elsif current_user.admin? %>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
<div class="center">
  <%= link_to 'New Trip', new_trip_path %>
</div>
<% end %>
</div>